node{
   stage('SCM Checkout'){
     git 'https://github.com/vodili321/my-app.git'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@172.31.87.10:/opt/apache-tomcat-8.5.66/webapps/'
      }
   }
 }
